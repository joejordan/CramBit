{
  "name": "crambit",
  "description": "A Solidity library designed to cram as many values into as small a space as possible",
  "version": "0.1.0",
  "author": {
    "name": "Joe Jordan",
    "url": "https://github.com/joejordan"
  },
  "bugs": {
    "url": "https://github.com/joejordan/CramBit/issues"
  },
  "homepage": "https://github.com/joejordan/CramBit/#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "files": [
    "/src",
    "CHANGELOG.md"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "solidity-library",
    "evm",
    "compression"
  ],
  "license": "MIT",
  "packageManager": "yarn@3.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/joejordan/CramBit"
  },
  "resolutions": {
    "solhint/@solidity-parser/parser": "^0.14.5"
  },
  "scripts": {
    "clean": "rimraf cache out",
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:sol": "solhint \"{src,test}/**/*.sol\"",
    "postinstall": "husky install",
    "prettier:check": "prettier --check \"**/*.{json,md,sol,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,sol,yml}\""
  }
}
